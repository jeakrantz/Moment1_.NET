@page
@model MyApp.Namespace.RazorModel
@{
    ViewData["Title"] = "Razor";

    string[] courses = {

    "DT057G, Webbutveckling I",
    "DT084G, Introduktion till programmering i JavaScript",
    "DT068G, Webbanvändbarhet",
    "DT200G, Grafisk teknik för webb",
    "DT003G, Databaser",
    "DT093G, Webbutveckling II",
    "DT173G, Webbutveckling III",
    "DT197G, Webbdesign för CMS",
    "IK060G, Projektledning",
    "DT193G, Fullstackutveckling med Ramverk",
    "DT162G, JavaScript-baserad webbutveckling",
    "DT071G, Programmering i C#.NET"
    };

    var dateNow = DateTime.Now;
}

<div>
    <h1>@ViewData["Title"]</h1>
    <p>En sida med Razor-kod</p>

    <p>Datum/klockslag: @dateNow</p>

    @if(dateNow.DayOfWeek == DayOfWeek.Monday){
        <p>Idag är det måndag.</p>
    } else {
        <p>Idag är det inte måndag</p>
    }

    <p>Kurser jag läst:</p>
    <ol>
        @foreach (var course in courses){
            <li>@course</li>
        }
    </ol>
</div>
