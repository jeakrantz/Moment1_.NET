<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Moment1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Moment1.styles.css" asp-append-version="true" />
</head>

<body>
    <header class="container">
        <div class="d-flex flex-row justify-content-between">
        <a asp-area="" asp-page="/Index">Moment1</a>
        <p>Dagens datum är: </p>
        </div>
    </header>

    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <nav>
                    <ul>
                        <li>
                            <a asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li>
                            <a asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                </nav>
            </div>
            <main class="col-sm-8" role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer>
        <div class="text-center">
            &copy; 2024 - Moment1 - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>